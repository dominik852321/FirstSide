@model HomeVM

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Events";
}

<div class="row">
    @foreach (var events in Model.Events)
    {
        var photoPath = "~/Image/" + (events.PhotoUrl ?? "noimage.jpg");

        <div class="col-md-3">
            <div class="card " id="restauracje">

                <div class="card-img-top">
                    <img src="@photoPath" asp-append-version="true" class="rounded border w-100" height="250" />
                </div>
                <div class="card-body">
                    <h5 class="text-center">@events.EventName</h5>
                    <div class="form-row d-flex justify-content-between">
                        <h6 class="text-muted text-center">@events.DateStart.ToLongDateString()</h6>
                        <h6 class="text-muted text-center">@events.DateStart.ToLongTimeString()</h6>
                    </div>
                    <h6 class="text-center">@events.Place</h6>
                    <div class="text-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary">Wezmę udział</button>
                                <button type="button" class="btn btn-outline-info">Informacje</button>
                            </div>
                        }
                    </div>
                </div>

            </div>

        </div>

    }
</div>

