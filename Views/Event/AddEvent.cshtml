@model EventVM

@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Add event";
}

<link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/lib/jquery-timepicker/jquery.timepicker.min.css" rel="stylesheet" />
<link href="~/lib/jquery-datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />

<form enctype="multipart/form-data" asp-controller="Event" asp-action="AddEvent"
      method="post" class="m-3 col-md-4 mx-auto " autocomplete="off">

    <input type="hidden" asp-for="@Model.Restaurant.Name" />
    <input type="hidden" asp-for="@Model.Restaurant.Id" />

    <div class="form-label-group " style="margin-bottom:0.5rem">
        <label asp-for="Event.EventName">Nazwa wydarzenia</label>
        <input asp-for="Event.EventName" class="form-control" placeholder="Wydarzenie" required>
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>

    <div class="form-group d-flex justify-content-between">


        <div class="form-label-group">
            <label asp-for="Event.DateStart">Start</label>
            <input asp-for="Event.DateStart" type="text" class="form-control" id="datetimepicker" placeholder="Data i godzina" />
            <span asp-validation-for="Event.DateStart" class="text-danger"></span>
        </div>

        <div class="form-label-group ">
            <label asp-for="Event.DateEnd">Koniec</label>
            <input asp-for="Event.DateEnd" type="text" class="form-control" id="datetimepicker2" placeholder="Data i godzina" />
            <span asp-validation-for="Event.DateEnd" class="text-danger"></span>
        </div>
    </div>

    <div class="form-label-group ">
        <label asp-for="Event.Place">Miejsce wydarzenia</label>
        <input asp-for="Event.Place" type="text" class="form-control" placeholder="Miejscowość" />
        <span asp-validation-for="Event.Place" class="text-danger"></span>
    </div>


    <div class="form-label-group">
        <label asp-for="File">Zdjęcie</label>
        <div class="custom-file">
            <input asp-for="File" class="form-control custom-file-input">
            <label class="custom-file-label overflow-hidden">Wybierz zdjęcie</label>
        </div>
        <span asp-validation-for="File" class="text-danger"></span>
    </div>



    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary ">Dodaj wydarzenie</button>
    </div>




    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @section Scripts
{
        <script type="text/javascript" src="~/lib/jquery-timepicker/jquery.timepicker.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.js"></script>
        <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#datetimepicker").datetimepicker({
                });
                $("#datetimepicker2").datetimepicker({
                });
                $(".custom-file-input").on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(filename);
                });
            });
        </script>

    }
</form>

