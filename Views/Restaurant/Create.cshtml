@model RestaurantVM


@{
    ViewData["Title"] = "Create";
}

<div class="col-md-4 mx-auto my-5 py-3" >
    <form enctype="multipart/form-data" asp-controller="Restaurant" asp-action="Create" method="post" autocomplete="off">

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="Name">Nazwa restauracji</label>
            <input asp-for="Name" class="form-control" placeholder="Nazwa" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="City">Miasto</label>
            <input asp-for="City" class="form-control" placeholder="Miasto" required>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhotoFile">Zdjęcie z ulicy</label>

            <div class="custom-file">
                <input asp-for="PhotoFile" class="form-control custom-file-input">
                <label class="custom-file-label overflow-hidden">Wybierz</label>
            </div>

        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Dodaj restaurację</button>
        </div>

    </form>
</div>




@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(filename);
            });
        });

    </script>


}