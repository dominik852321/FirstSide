@model RestaurantVM

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-around">
    <form enctype="multipart/form-data" asp-controller="Restaurant" asp-action="Create" method="post" class="col-4 " autocomplete="off">

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="Name">Nazwa restauracji</label>
            <input asp-for="Name" class="form-control"  placeholder="Name restaurant" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="City">Miasto</label>
            <input asp-for="City" class="form-control" placeholder="City restaurant" required>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="PhotoFile">Zdjęcie</label>

            <div class="custom-file">
                <input asp-for="PhotoFile" class="form-control custom-file-input">
                <label class="custom-file-label overflow-hidden">Wybierz</label>
            </div>

        </div>



        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Dodaj restaurację</button>
            </div>
        </div>

    </form>

    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                $(".custom-file-input").on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(filename);
                });
            });

        </script>

     
    }

</div>



