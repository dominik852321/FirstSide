@model HomeVM

@{
    ViewData["Title"] = "Restauracje";
}

<div class="col-9 mx-auto row d-flex justify-content-center" autocomplete="off">

    <div class="form-group row col-lg-5 col-md-6 my-2">
        <label class="col-sm-4 col-form-label px-0"> Restauracja</label>

        <div class="col-sm-8 ">
            <input type="text" class="form-control" id="Name" value="@ViewBag.CurrentFilterName" placeholder="Nazwa" />
        </div>
    </div>

    <div class="form-group row col-lg-5 col-md-6 my-2  ">
        <label class="col-sm-4 col-form-label px-0 ">Miasto</label>

        <div class="col-sm-8 ">
            <input type="text" class="form-control" id="City" value="@ViewBag.CurrentFilterCity" placeholder="Miasto" />
        </div>
    </div>

    <div class="form-group row col-lg-2 my-2">
        <input type="button" class="btn btn-info mx-auto" id="btnSearch" value="Szukaj" />
    </div>

</div>



@if (Model.Restaurants != null)
{

    <div class="row" id="restaurants">
        <partial name="_Restaurants" model="Model.Restaurants" />
    </div>

}



@section Scripts{
    <script>
        $("#btnSearch").click(function (e) {
            $.ajax({
                url: '/Restaurant/SearchRestaurant',
                type: 'POST',
                data: {
                    CurrentFilterName: $("#Name").val(),
                    CurrentFilterCity: $("#City").val(),
                },
                success: function (result) {
                    $("#restaurants").html(result);
                },
            })
        })
    </script>

}








