@model Restaurant

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{var pht = "~/ImageRestaurant/" + (Model.ZdjecieUrl); }

<div class="col-xl-3 col-lg-4 col-sm-6" id="@Model.Id">
    <div class="col-12 mx-auto m-3 shadow-sm border rounded p-0" id="restauracje">


        <p class="font-weight-bolder text-center ">@Model.Name</p>

        <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@Model.Id">
            <img src="@pht" asp-append-version="true" class="rounded border w-100" height="150" />
        </a>



        <div class="row d-flex justify-content-between p-3">
            <h6 class="">@Model.City</h6>
            <h6 class="">@Model.User.UserName</h6>
        </div>

    </div>
</div>






