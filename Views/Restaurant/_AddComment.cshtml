@model CommentVM

<form asp-action="AddComment" asp-controller="Restaurant" method="post" class="row p-2 m-auto">
    <div class="col-12 m-2" >
        <input type="hidden" asp-for="@Model.Id" />
        <span>
            <i class="ratingStar far fa-star" data-value="1"></i>
            <i class="ratingStar far fa-star" data-value="2"></i>
            <i class="ratingStar far fa-star" data-value="3"></i>
            <i class="ratingStar far fa-star" data-value="4"></i>
            <i class="ratingStar far fa-star" data-value="5"></i>
        </span>
        <input type="hidden" asp-for="@Model.Rating" id="ratingsValue" value="1"/>
    </div>
    <div class="col-md-10 my-auto">

        <div class="form-group">
            <textarea asp-for="@Model.Description" class="form-control" placeholder="Opisz restaurację" rows="3"></textarea>
        </div>


    </div>
    <div class="col-md-2 my-2">
        <button type="submit" class="btn btn-primary ">Dodaj opinię</button>
    </div>
</form>

