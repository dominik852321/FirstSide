@model RestaurantMenu

@{
    ViewData["Title"] = "Edit Menu";
}

<div class="row">
    <form asp-action="EditMenu" asp-controller="Restaurant" method="post" class="col-4 mx-auto text-center">

        <div class="display-4">@Model.Menu.Restaurant.Name</div>

        <input type="hidden" asp-for="@Model.Menu.Id" />
        <input type="hidden" asp-for="@Model.Menu.Restaurant" />
        <input type="hidden" asp-for="@Model.Menu.RestaurantId" />


        <div class="col-8 mx-auto m-4">


            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Menu.Alcohol"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Menu.Alcohol" class="form-control text-center" placeholder="Alcohol">
                    <span asp-validation-for="@Model.Menu.Alcohol" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Menu.Drink"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Menu.Drink" class="form-control text-center" placeholder="Drink">
                    <span asp-validation-for="@Model.Menu.Drink" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Menu.Pizza"></label>
                 </div>
                <div class="col-9">
                    <input asp-for="@Model.Menu.Pizza" class="form-control text-center" placeholder="Pizza" >
                    <span asp-validation-for="@Model.Menu.Pizza" class="text-danger"></span>
                </div>
                </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Menu.Foods"></label>
                </div>
                <div class="col-9 ">
                    <input asp-for="@Model.Menu.Foods" class="form-control text-center" placeholder="Foods">
                    <span asp-validation-for="@Model.Menu.Foods" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Edit menu</button>
            </div>

        </div>

    </form>
</div>