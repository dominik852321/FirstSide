@model Restaurant

@{
    ViewData["Title"] = "Information";
    var photoPath = "~/ImageRestaurant/" + (Model.ZdjecieUrl ?? "noImage.jpg");
}


<div class="col-10 shadow-lg mx-auto" id="tło" >
    <div class="row" >
        <div class="col-lg-7 my-2">
            <p class="modal-title text-center display-4">@Model.Name</p>
            <div class="col-12 mx-auto">

                <div id="przykladowaKaruzela3" class="carousel slide " data-ride="carousel">
                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img class="rounded border shadow-lg w-100" height="300" src="@photoPath" asp-append-version="true">
                        </div>

                        @if (Model.photo != null)
                        {
                            @foreach (var pht in Model.photo)
                            {
                                var photoPath2 = "~/ImageRestaurant/" + (pht.Zdjecie);
                                <div class="carousel-item">
                                    <img class="rounded border shadow-lg w-100" height="300" src="@photoPath2" asp-append-version="true">
                                </div>
                            }
                        }


                    </div>
                    <a class="carousel-control-prev" href="#przykladowaKaruzela3" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Poprzedni</span>
                    </a>
                    <a class="carousel-control-next" href="#przykladowaKaruzela3" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Następny</span>
                    </a>
                </div>
            </div>

            <div class="row d-flex justify-content-around p-2 border-dark">
                <h3>@Model.City</h3>
                <h6 class="lead my-auto">Ul. @Model.Address @Model.Number</h6>
                
            </div>
        </div>

        <div class="row col-lg-5 my-2 mx-auto">


            <div class="col-12 px-0">
                <p class="text-capitalize text-center h4">Informacje</p>
                <div class="text-center">
                    <h5 class="lead">
                        Otwarte od @Model.Open do @Model.Close.
                    </h5>
                    <h3 class="lead">
                        @Model.Description
                    </h3>

                    @if (Model.Menu != null)
                    {
                        <a class="btn btn-info" asp-action="Details" asp-controller="Menu" asp-route-id="@Model.Id">Przejdz do menu</a>
                    }

                </div>


                <p class="border-top mt-3"></p>


                <div class="row">

                    @if (Model.EventRestaurants.Any())
                    {
                        foreach (var x in Model.EventRestaurants.Take(2))
                        {
                            <partial name="_DetailsEvents" model="x" />
                        }
                        if (Model.EventRestaurants.Count > 2)
                        {
                            <a asp-action="Events" asp-controller="Event" class="btn btn-info m-2 ml-auto">Wydarzenia..</a>
                        }
                    }
                    else
                    {

                        <h5 class="lead">Obecnie nie ma wydarzeń</h5>

                    }

                </div>



            </div>
        </div>
    </div>
</div>
