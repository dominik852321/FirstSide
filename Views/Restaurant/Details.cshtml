@model Restaurant

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Information";
    var photoPath = "~/ImageRestaurant/" + (Model.ZdjecieUrl ?? "noImage.jpg");
    var user = UserManager.GetUserAsync(User);

}

<div class="row">
    <div class="col-12 rounded shadow-lg" id="restauracje">
        <div class="row ">
            <div class="col-lg-7 my-2">
                <p class="display-3 text-center">@Model.Name</p>
                <div class="col-10 mx-auto">


                    <div id="przykladowaKaruzela3" class="carousel slide " data-ride="carousel">

                        <div class="carousel-inner">

                            <div class="carousel-item active">
                                <img class="rounded border shadow-lg w-100" height="250" src="@photoPath" asp-append-version="true">
                            </div>

                            @if (Model.photo != null)
                            {
                                @foreach (var pht in Model.photo)
                                {
                                    var photoPath2 = "~/ImageRestaurant/" + (pht.Zdjecie);
                                    <div class="carousel-item">
                                        <img class="rounded border shadow-lg w-100" height="300" src="@photoPath2" asp-append-version="true">
                                    </div>
                                }
                            }


                        </div>
                        <a class="carousel-control-prev" href="#przykladowaKaruzela3" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Poprzedni</span>
                        </a>
                        <a class="carousel-control-next" href="#przykladowaKaruzela3" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Następny</span>
                        </a>
                    </div>
                </div>

                <div class="row d-flex justify-content-around p-2">
                    <h3 class="text-muted">@Model.City</h3>
                    <h3 class="text-muted">@Model.User.UserName</h3>
                </div>
            </div>

            <div class="row col-lg-5 my-2 mx-0">


                <div class="col-xl-12">
                    <p class="text-capitalize text-center h4">Informacje</p>
                    <div class="text-center">
                        <h5 class="lead">
                            Otwarte od @Model.Open do @Model.Close.
                        </h5>
                        <h3>
                            @Model.Description
                        </h3>
                        <div class="btn-group"></div>
                        @if (Model.Menu != null)
                        {
                            <a class="btn btn-info" asp-action="Details" asp-controller="Menu" asp-route-id="@Model.Id">Przejdz do menu</a>
                        }
                        else
                        {
                            <a class="btn btn-info" asp-action="AddMenu" asp-controller="Menu" asp-route-id="@Model.Id">Dodaj meenu</a>
                        }


                        @if (SignInManager.IsSignedIn(User) && user.Result.UserName == Model.User.UserName)
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Restaurant" asp-route-id="@Model.Id">Edytuj informacje</a>
                        }
                    </div>
                </div>


                <div class="col-xl-12 ">
                    <p class="h3 text-capitalize text-center">Wydarzenia</p>
                    <div class="text-center">

                        @if (Model.EventRestaurants.Any())
                        {
                            @foreach (var events in Model.EventRestaurants)
                            {
                                <div class="form-row d-flex justify-content-around">

                                    <h5 class="text-muted">@Html.DisplayFor(item => events.EventName)</h5>
                                    <h5 class="lead">@Html.DisplayFor(item => events.DateStart)</h5>

                                </div>
                            }
                        }
                        else
                        {

                            <h5 class="lead">Obecnie nie ma wydarzeń</h5>

                        }
                        @if (SignInManager.IsSignedIn(User) && user.Result.UserName == Model.User.UserName)
                        {
                            <a class="btn btn-primary m-2" asp-action="AddEvent" asp-controller="Event" asp-route-id="@Model.Id">Dodaj wydarzenie</a>
                        }
                    </div>
                </div>

                <div class="mt-auto ml-auto">
                    <div class="float-right ">
                        @if (SignInManager.IsSignedIn(User) && user.Result.UserName == Model.User.UserName)
                        {
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteRest">Usuń</button>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="DeleteRest" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header ">
                    <h5 class="modal-title">Czy napewno chcesz usunąć restaurację ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <div class="mx-auto row">
                        <div class="btn-group">
                            <form asp-action="DeleteRestaurant" asp-controller="Restaurant" asp-route-id="@Model.Id" method="post">
                                <button class="btn btn-outline-danger">Tak</button>
                            </form>
                            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Nie</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>