@model RestaurantMenu

@{
    ViewData["Title"] = "Add Menu";
}

<div class="row">
    <form asp-action="AddMenu" asp-controller="Menu" method="post" class="col-4 mx-auto text-center" autocomplete="off">

        <div class="display-4">@Model.RestaurantName</div>

        <input type="hidden" asp-for="@Model.RestaurantId" />

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="AlcoholPromotions"></label>
            <input asp-for="AlcoholPromotions" class="form-control" placeholder="Alcohol" >
            <span asp-validation-for="AlcoholPromotions" class="text-danger"></span>
        </div>

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="DrinkPromotions"></label>
            <input asp-for="DrinkPromotions" class="form-control" placeholder="Drink" >
            <span asp-validation-for="DrinkPromotions" class="text-danger"></span>
        </div>

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="PizzaPromotions"></label>
            <input asp-for="PizzaPromotions" class="form-control" placeholder="Pizza" >
            <span asp-validation-for="PizzaPromotions" class="text-danger"></span>
        </div>

        <div class="form-label-group" style="margin-bottom:0.5rem">
            <label asp-for="FoodPromotions"></label>
            <input asp-for="FoodPromotions" class="form-control" placeholder="Foods" >
            <span asp-validation-for="FoodPromotions" class="text-danger"></span>
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <button type="submit" class="btn btn-outline-success">Add menu</button>
        </div>

    </form>
</div>