@model Menu

@{
    ViewData["Title"] = "Edit Menu";
}

<div class="row">
    <form asp-action="EditMenu" asp-controller="Menu" method="post" class="col-4 mx-auto text-center">

        <div class="display-4">@Model.Restaurant.Name</div>

        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Restaurant" />
        <input type="hidden" asp-for="@Model.RestaurantId" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-8 mx-auto m-4">


            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Alcohol"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Alcohol" class="form-control text-center" placeholder="Alcohol">
                    <span asp-validation-for="@Model.Alcohol" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Drink"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Drink" class="form-control text-center" placeholder="Drink">
                    <span asp-validation-for="@Model.Drink" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Pizza"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Pizza" class="form-control text-center" placeholder="Pizza">
                    <span asp-validation-for="@Model.Pizza" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-bottom:0.5rem">
                <div class="col-3 p-2">
                    <label asp-for="@Model.Foods"></label>
                </div>
                <div class="col-9 ">
                    <input asp-for="@Model.Foods" class="form-control text-center" placeholder="Foods">
                    <span asp-validation-for="@Model.Foods" class="text-danger"></span>
                </div>
            </div>



            <div class="btn-group">
                <button type="submit" class="btn btn-info">Edit menu</button>
                <a class="btn btn-secondary" asp-action="DetailsRestaurant" asp-controller="MyAccount" asp-route-id="@Model.RestaurantId">Wróć</a>
            </div>

        </div>

    </form>
</div>